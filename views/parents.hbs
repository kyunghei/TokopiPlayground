<table id="parents-table">
    <caption>Parents</caption>
    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each parents_data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody id="parents-table-body">

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each parents_data}}
        <tr data-value="{{this.parent_id}}">
            <td>{{this.parent_id}}</td>
            <td>{{this.parent_name}}</td>
            <td>{{this.parent_number}}</td>
            <td>{{this.parent_email}}</td>
            <td><button onclick="deleteParent({{this.parent_id}})"><i class="fa fa-trash"></i></button></button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<script src="./js/delete_parent.js"></script>

<div class="forms">
    {{!-- Form to add a record to the table --}}
    <form id="add-parent-form-ajax">
        <h2>Add New Parent</h2>

        {{!-- <label for="input-parent-name">Parent Name:</label> --}}
        <input type="text" name="input-parent-name" id="input-parent-name" placeholder="Parent Name" required>
        <br>
        {{!-- <label for="input-parent-number">Phone Number: </label> --}}
        <input type="tel" name="input-parent-number" id="input-parent-number" placeholder="Phone Number" required>
        <br>
        {{!-- <label for="input-parent-email">Email: </label> --}}
        <input type="email" name="input-parent-email" id="input-parent-email" placeholder="Email">
        <br>
        <input type="submit" value="Add Parent">
        <br>
    </form>

    <script src="./js/add_parent.js"></script>

    <form id="update-parent-form-ajax">
        <h2>Update Parent Data</h2>

        {{!-- <label for="input-parent-id">Parent ID [Parent Name]:</label> --}}
        <select name="input-parent-id" id="select-parent-id" required>
            <option value="">Parent ID [Parent Name]</option>
            {{#each parents_data}}
            <option value="{{this.parent_id}}">{{this.parent_id}} [{{this.parent_name}}]</option>
            {{/each}}
        </select>
        {{!-- <label for="input-pet-name">Pet Name:</label>
        <input type="text" name="input-pet-name" id="display-pet-name" value="{{this.pet_name}}"> --}}
        <br>
        <input type="text" name="input-parent-name" id="update-parent-name" placeholder="Parent Name">
        <br>
        {{!-- <label for="input-parent-number">Phone Number:</label> --}}
        <input type="tel" name="input-parent-number" id="update-parent-number" placeholder="Phone Number">
        <br>
        {{!-- <label for="input-parent-email">Email:</label> --}}
        <input type="email" name="input-parent-email" id="update-parent-email" placeholder="Email">
        <br>
        <input type="submit" value="Update Parent">
        <br>
    </form>

    <script src="./js/update_parent.js"></script>
</div>